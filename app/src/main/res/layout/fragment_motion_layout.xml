<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="binding"
            type="com.example.androiddevpractice.topics.userinterface.MotionLayoutFragment" />
    </data>

    <!-- [databinding] {"msg":"Only one layout element with 1 view child is allowed.  -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/WhatIsMotionLayout"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutDescription="@xml/motion_scene_01"
            tools:context=".menu.contextual.FragmentContextualOne"
            tools:showPath="true">

            <Button
                android:id="@+id/const_one_btn_one"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@color/colorOrange"
                android:text="Sin"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="310dp" />


        </androidx.constraintlayout.motion.widget.MotionLayout>

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutDescription="@xml/motion_scene_02">

            <Button
                android:id="@+id/const_one_btn_two"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@color/red"
                android:text="two"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="500dp" />
        </androidx.constraintlayout.motion.widget.MotionLayout>

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutDescription="@xml/motion_scene_03"
            tools:layout_editor_absoluteY="16dp">

            <Button
                android:id="@+id/const_btn_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UP"
                tools:layout_editor_absoluteX="190dp"
                tools:layout_editor_absoluteY="400dp" />
        </androidx.constraintlayout.motion.widget.MotionLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>